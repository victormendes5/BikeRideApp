<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modalPackageInformationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/transparentBlack70"
    android:padding="16dp">

    <TextView
        android:id="@+id/packageInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/modal_package_information_title"
        android:textColor="@color/colorTextIcons"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/packageInfoCloseModals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"/>

    <View
        android:id="@+id/packageInfoTitleDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/packageInfoTitle"
        android:layout_marginBottom="16dp"
        android:background="@color/colorDivider" />

    <RelativeLayout
        android:id="@+id/packageTypeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/packageInfoTitleDivider"
        android:background="@color/transparentWhite05"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/packageTypeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/modal_package_information_type_title"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="@color/colorTextIcons"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageTypeHeader"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/packageTypeMailSlc"
                android:layout_width="96dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@color/transparentWhite10">

                <View
                    android:id="@+id/packageTypeMailSlc_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentAccent50"
                    android:visibility="gone"
                    android:alpha="0"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_mail_black_24dp"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_mail_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorDivider"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/documentTypeCaption"/>

                <TextView
                    android:id="@+id/documentTypeCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_mail_description"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:textColor="@color/colorDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/packageTypeBoxSlc"
                android:layout_width="96dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/transparentWhite10">

                <View
                    android:id="@+id/packageTypeBoxSlc_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentAccent50"
                    android:visibility="gone"
                    android:alpha="0"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/ic_markunread_mailbox_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_box_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorDivider"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/boxTypeCaption"/>

                <TextView
                    android:id="@+id/boxTypeCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_box_description"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:textColor="@color/colorDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/packageTypeUnusualSlc"
                android:layout_width="96dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@color/transparentWhite10">

                <View
                    android:id="@+id/packageTypeUnusualSlc_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentAccent50"
                    android:visibility="gone"
                    android:alpha="0"/>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_show_chart_black_24dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_unusual_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorDivider"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/unusualTypeCaption"/>

                <TextView
                    android:id="@+id/unusualTypeCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_unusual_description"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:textColor="@color/colorDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/packageSizeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/packageTypeContainer"
        android:background="@color/transparentWhite05"
        android:padding="8dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/packageSizeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/modal_package_information_size_title"
            android:textStyle="bold"
            android:textColor="@color/colorTextIcons"
            android:padding="4dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageSizeHeader"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/packageSizeSmallSlc"
                android:layout_width="96dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@color/transparentWhite10">

                <View
                    android:id="@+id/packageSizeSmallSlc_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentAccent50"
                    android:visibility="gone"
                    android:alpha="0"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mail_black_24dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_small_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorDivider"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/smallPackageCaption"/>

                <TextView
                    android:id="@+id/smallPackageCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_small_description"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:textColor="@color/colorDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/packageSizeMediumSlc"
                android:layout_width="96dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/transparentWhite10">

                <View
                    android:id="@+id/packageSizeMediumSlc_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentAccent50"
                    android:visibility="gone"
                    android:alpha="0"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/ic_mail_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_medium_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorDivider"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/mediumPackageCaption"/>

                <TextView
                    android:id="@+id/mediumPackageCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_medium_description"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:textColor="@color/colorDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/packageSizeLargeSlc"
                android:layout_width="96dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@color/transparentWhite10">

                <View
                    android:id="@+id/packageSizeLargeSlc_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentAccent50"
                    android:visibility="gone"
                    android:alpha="0"/>

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_mail_black_24dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_large_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorDivider"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/largePackageCaption"/>

                <TextView
                    android:id="@+id/largePackageCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_package_information_large_description"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:textColor="@color/colorDivider"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/enterAddressBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/packageSizeContainer"
        android:layout_centerHorizontal="true"
        android:text="@string/modal_package_information_enter_address_button"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"/>

</RelativeLayout>